.collapse.row.editguest(id='delete' +member._id)
  .card.card-body
    h1 Delete Guest
    form.deleteGuest(
      method="POST"
      action="/deleteguest"
    )
      p Are you sure you want to delete this guest?
      input(
        type='text'
        name='firstName'
        pattern='[A-Za-z\s]+'
        placeholder='First Name'
        value=member.firstName
        readonly
      )
      input.last-name-input(
        type='text'
        name='lastName'
        pattern='[A-Za-z\s]+'
        placeholder='Last Name'
        value=member.lastName
        readonly
      )
      input.id-hide(
        type='text'
        name='id'
        placeholder='Guest Id'
        value=member._id
        readonly
      )
      button.btn(type="submit") Delete

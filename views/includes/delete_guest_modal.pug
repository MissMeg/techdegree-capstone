button.btn(
  type="button"
  data-toggle="modal"
  data-target="#deleteGuestModal"
)
  i.fas.fa-trash-alt
div.modal.fade#deleteGuestModal(
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
)
  div.modal-dialog(role="document")
    div.modal-content
      div.modal-header
        h1 Delete Guest
        button.close(
          type="button"
          data-dismiss="modal"
          aria-label="Close"
        )
          span(aria-hidden="true") &times;
      div.modal-body
        form.deleteGuest(
          method="POST"
          action="/deleteguest"
        )
          div.container-fluid
            div.row.justify-content-center
              div.col.align-self-center
                p Are you sure you want to delete this guest?
                div.row.justify-content-center
                  div.col.align-self-center
                    input(
                      type='text'
                      name='firstName'
                      pattern='[A-Za-z\s]+'
                      placeholder='First Name'
                      value=member.firstName
                      readonly
                    )
                  div.col.align-self-center
                    input(
                      type='text'
                      name='lastName'
                      pattern='[A-Za-z\s]+'
                      placeholder='Last Name'
                      value=member.lastName
                      readonly
                    )
                  div.col.align-self-center
                    input(
                      type='text'
                      name='id'
                      placeholder='Guest Id'
                      value=member._id
                      readonly
                    )
          div.modal-footer
            button.btn(type="submit") Delete
